      /*if (tangler != null) {
        navi += '<input type="hidden" id="tangle" name="tangle" value="';
        navi += base64Encode(tangler) + '">';
      }*/
      if (me != null) {
        //dont care about empty browsers
        /*if (me.mine != null) {
          if (me.mine.isEmpty == false || me.role != 0) {
